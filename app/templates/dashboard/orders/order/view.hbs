
<h2 class="ui  header">Order: #OR{{order.id}}</h2>


<div class="ui two column grid">
  <div class="twelve wide column" style="padding:0">
    <div class="ui basic segment" style="border : 1px solid rgba(34, 36, 38, 0.15);background:rgba(255,255,255,0.9);max-height:550px;overflow:auto ">
      <div class="ui three column grid">
        <div class="column" >
          <div class="ui  form">
            <div class="inline field" >
              <label style="width:75px">Customer </label>:
              {{order.customer.companyname}}
            </div>
          </div>
        </div>

        <div class="column" >
          <div class="ui small form">
            <div class="inline field" >
              <label  style="width:75px">Stock Due </label>:
              {{order.duedate}}
            </div>
            <div class="inline field">
              <label style="width:75px">Email  </label>:
              {{order.customer.email}}
            </div>
          </div>

        </div>
        <div class=" column"><h3 style="margin-top:10px" class="ui right floated header">#OR{{order.id}} </h3></div>
      </div>
      <div class="ui divider" ></div>
      <div class="ui three column grid">

        <div class="column" ></div>
        <div class="right aligned column">
          <div class="ui small form">

          </div>
        </div>
        <div class="right aligned column">

        </div>
      </div>
      <table class="ui celled table">
        <thead  class="center aligned">
          <tr>
            <th>Item Name</th>
            <th style="width:100px">Quantiy</th>
            <th>After</th>
            <th>item Cost</th>
            <th>Total</th>
          </tr>
        </thead>
        <tbody>

          {{#each order.orderitems  as |orderitem|}}
          <tr class="center aligned">
            <td>
              {{orderitem.product.productname}}
            </td>
            <td  >
                {{orderitem.quantity}}
            </td>
            <td>
              <label>{{orderitem.aftervalue}}</label>
            </td>
            <td >
                {{orderitem.product.retailprice}}
            </td>
            <td>{{orderitem.computedtotal}}</td>


          </tr>
          {{/each}}
        </tbody>
      </table>
      <br>

      <div class="ui three column grid">
        <div class="column" ></div>
        <div class="column" ></div>
        <div class="column" >
          <table class="ui very basic table">
            <tbody>
              <tr>
                <td>Total Units</td>
                <td class="right aligned">{{order.computedtotalunits}}</td>
              </tr>
              <tr>
                <td>Total Cost</td>
                <td class="right aligned">{{order.computedtotalcosts}}</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <div class="ui basic segment" style="border : 1px solid rgba(34, 36, 38, 0.15);background:rgba(9,9,26,0.4)">
      <!-- .  <button class=" ui tiny right floated  green button" {{createPurchaseOrder}}>Create</button> -->
      <div class="ui three column grid">
        <div class="column" ></div>
        <div class="column" ></div>
        <div class="column"  style="padding-top:0;padding-bottom:0" >
          <br>
          <button class=" ui small fluid green button "  >Deliver Order</button>
          <br>
        </div>
      </div>
    </div>
  </div>
  <div class="four wide column">

  </div>
</div>
