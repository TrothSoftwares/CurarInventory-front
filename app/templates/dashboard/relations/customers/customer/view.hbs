  <div class="five wide column">

    <div class="inline field" style="float:right;margin-bottom :25px">
      <label> Email :</label>
      <div class="ui transparent input"><input type="text" readonly="true" value= {{ customer.email }} ></div>

    </div>

<div class="inline field" style="float:right;margin-bottom :25px">
  <label>Phone :</label>
  <div class="ui transparent input"><input type="text" readonly="true" value= {{ customer.phone }} ></div>

</div>



</div>

<div class="ui black segment" style="max-height:260px;overflow:auto" >
  <div class="ui left floated header">  Customer Payment History  </div>
  <table class="ui celled table">
  <thead>
    <tr>
    <th>ID</th>
    <th>Amount</th>
    <th>Payment Date</th>
  </tr></thead>
  <tbody>
    {{#each customer.payments as |payment index|}}
    <tr>
      <td>{{ incrementone index}}</td>
      <td>{{payment.amount}}</td>
      <td>{{moment-format payment.createdat 'MM/DD/YYYY'}}</td>
    </tr>
    {{/each}}
  </tbody>
</table>
</div>


<form class="ui form">
  <div class="field">
    <label>Amount</label>
    {{input type="number"   placeholder="Amount" value=amount}}
  </div>
  


  <div class="ui right floated blue small submit button {{isPaymentButtonDisabled}}"   {{action "submitPayment"}}>Submit</div>
</form>

</div>
</div>
