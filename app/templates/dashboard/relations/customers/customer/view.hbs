  <div class="ui stackable grid">
    <div class="five wide dividing column">

      <div class="inline field" style="float:right;margin-bottom :25px">
    <label >Customer Name :</label>
    <div class="ui transparent input"><input type="text" readonly="true" value= {{ customer.companyname }} ></div>
  </div>
  <div class="inline field" style="float:right;margin-bottom :25px">
    <label>Address: </label>
    <div class="ui transparent input"><input type="text" readonly="true" value= {{ customer.address1 }} ></div>
  </div>
  <div class="inline field" style="float:right;margin-bottom :25px">
    <label>TIN :</label>
    <div class="ui transparent input"><input type="text" readonly="true" value= {{ customer.tin }} ></div>

  </div>
  <div class="inline field" style="float:right;margin-bottom :25px">
    <label>Total Due: </label>
    <div class="ui transparent input"><input type="number" readonly="true" value= {{ customer.due }} ></div>
  </div>
</div>

