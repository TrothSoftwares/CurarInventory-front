
<div class="ui black segment" >
  <div class="ui left floated header">Employee Details  </div>
  {{link-to 'Edit' 'dashboard.relations.employees.employee.edit'  class="ui blue inverted mini right floated button "}}
  {{link-to 'Go Back' 'dashboard.relations.employees'  class="ui brown inverted mini right floated button "}}

  <div class="ui clearing divider"></div>
  <div class="ui small form">
    <div class="ui stackable grid">
      <div class="five wide dividing column">

        <div class="inline field" style="float:right;margin-bottom :25px">
          <label > Slno :</label>

          <div class="ui transparent input"><input type="text" readonly="true" value={{employee.slno}} ></div>
        </div>
        <div class="inline field" style="float:right;margin-bottom :25px">
          <label>Payroll: </label>
          <div class="ui transparent input"><input type="text" readonly="true" value={{employee.payroll}} ></div>
        </div>
        <div class="inline field" style="float:right;margin-bottom :25px">
          <label> Name:</label>
          <div class="ui transparent input"><input type="text" readonly="true" value= {{ employee.name }} ></div>
        </div>

      </div>
      <div class="five wide column">
        <div class="inline field" style="float:right;margin-bottom :25px">
          <label> Department :</label>
          <div class="ui transparent input"><input type="text" readonly="true" value= {{ employee.department }} ></div>
        </div>

        <div class="inline field" style="float:right;margin-bottom :25px">
          <label>Workcontact :</label>
          <div class="ui transparent input"><input type="text" readonly="true" value= {{ employee.workcontact }} ></div>
        </div>
        <div class="inline field" style="float:right;margin-bottom :25px">
          <label>Personalcontact :</label>
          <div class="ui transparent input"><input type="text" readonly="true" value= {{ employee.personalcontact }} ></div>
        </div>



        <br><br><br><br>
        <div class="ui clearing divider"></div>



      </div>


    </div>
  </div>
</div>



<div class="ui black segment" >
  <div class="ui left floated header">  Tools Issued  </div>


  <table class="ui celled table">
  <thead>
    <tr>
    <th>ID</th>
    <th>Tool</th>
    <th>Issued Date</th>
    <th>Status</th>
    <th></th>
  </tr></thead>
  <tbody>
    {{#each employee.tools as |tool|}}
    <tr>
      <td>{{tool.id}}</td>
      <td>{{tool.name}}</td>
      <td>{{ moment-format tool.issuedate inputFormat}}</td>

      <td>{{tool.status}}</td>
      <td>{{link-to "View"  'dashboard.tools.tool.view'  tool }}</td>
    </tr>
    {{/each}}
  </tbody>
</table>





</div>
