
<div class="ui segment" >
  <div class="ui dividing header">Add New Employee</div>
  <div class="ui small form">
    <div class="ui stackable grid">
      <div class="five wide right aligned dividing column">

        <div class="inline field" style="float:right">
          <label >Sl. No :</label>
          {{input placeholder="Sl. No"  type="number" value=slno }}
        </div>
        <div class="inline field  {{validCompanycodeError}}" >
          <label>Payroll : </label>
          {{input placeholder="Payroll"  type="text"  value=payroll }}

        </div>
        <div class="inline field {{validChargecodeError}}" style="float:right">
          <label>Name :</label>
          {{input placeholder="Name"  type="text"  value=name }}

        </div>

      </div>
      <div class="five wide  right aligned  column">

        <div class="inline field" style="float:right">
          <label> Department :</label>
          {{input placeholder="Department"  type="text"  value=department}}
        </div>

        <div class="inline field" style="float:right">
          <label>Work Contact :</label>
          {{input placeholder="Work Contact"  type="text" value=workcontact }}
        </div>
        <div class="inline field" style="float:right">
          <label>Personal Contact :</label>
          {{input placeholder="Personal Contact"  type="text" value=personalcontact }}
        </div>
        <br><br><br><br>
        <div class="clearfix"></div>

        <button class="ui right floated primary tiny button {{isCreateEmployeeButtonDisabled}}"   {{action "createEmployee"}}>
          <i class="save icon"></i>
          Save
        </button>
{{link-to 'Cancel' 'dashboard.relations.employees.index'  class="ui black basic tiny right floated button "}}


      </div>
      <div class="five wide column">

      </div>

    </div>
  </div>
</div>
