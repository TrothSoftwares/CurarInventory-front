<div class="print-box">
<h2 class="ui left floated header no-print"> Purchase Report</h2>
<img src="images/z2.jpg" class="only-print" width="200px">
<div class="ui clearing  divider only-print"></div>
<div class="ui center aligned dividing header only-print">Purchase Report</div>

<div class="ui small form no-print">
<div class=" four fields" >
  <div class=" field" >
    <label >Supplier:</label>
    {{ember-selectize
      content=suppliers
      optionValuePath="content.id"
      optionLabelPath="content.companyname"
      selection=supplier
      placeholder="Select a Supplier"
    }}
  </div>

  <div class=" field" >
    <label >Start Date:</label>
    {{pikaday-input  placeholder="Select Date" value=startdate}}
  </div>
  <div class=" field" >
    <label>End Date</label>
    {{pikaday-input  placeholder="Select Date" value=enddate}}
  </div>
  <div class=" field" >
  <button class="ui tiny right  inverted red button " {{action "clearFilters"}}>Clear All Filters</button>
  </div>
</div>
</div>
<table class="ui celled structured center aligned table">
  <thead>
    <tr><th>No.</th>
    <th>Supplier</th>
    <th>Incoming Stocks </th>
    <th>Due Date</th>
    <th>Total Cost of Incoming Stocks</th>
  </tr></thead>

  <tbody>
    {{#each filteredProducts  as |purchaseorder index|}}
    <tr>
  <td> {{ incrementone index}}</td>
  <td> {{purchaseorder.supplier.companyname}}</td>
  <td> {{purchaseorder.duedate}}</td>
  <td> {{purchaseorder.totalunits}}</td>
  <td> {{purchaseorder.totalcost}}</td>
    </tr>
    {{/each}}
    <tr>
      <td></td>
      <td></td>
      <td></td>
      <td></td>

      <td>{{computedIncomingTotal}}</td>
    </tr>
  </tbody>
</table>
<button class="ui tiny primary right floated button no-print" {{action "printReport"}}>Print</button>
</div>

{{outlet}}
