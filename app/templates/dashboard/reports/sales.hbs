


<div class="ui top attached tabular menu">
  <a class="item active" data-tab="first">Yearly Report</a>
  <a class="item" data-tab="second">Custom Date Report</a>

</div>
<div class="ui bottom attached tab segment active" data-tab="first">

  <select onchange={{action "selectYear" value="target.value"}} class="form-control">
    {{#each years as |yearChoice|}}
    <option value={{yearChoice}} >{{yearChoice}}</option>
    {{/each}}
  </select>


<h3> Year: {{customers.firstObject.filteryear}}</h3>
  <table class="ui celled structured center aligned table">
    <thead>
      <tr>
        <th>Department</th>
        {{#each monthNames as |monnames|}}
        <th>{{monnames}}</th>
        {{/each}}
      </tr>
    </thead>
    <tbody>

      {{#each customers as |customer|}}
      <tr>
        <td>{{customer.companyname}}</td>
        <td>{{customer.orderByMonthJanuvary}}</td>
        <td>{{customer.orderByMonthFebruvary}}</td>
        <td>{{customer.orderByMonthMarch}}</td>
        <td>{{customer.orderByMonthApril}}</td>
        <td>{{customer.orderByMonthMay}}</td>
        <td>{{customer.orderByMonthJune}}</td>
        <td>{{customer.orderByMonthJuly}}</td>
        <td>{{customer.orderByMonthAugust}}</td>
        <td>{{customer.orderByMonthSeptember}}</td>
        <td>{{customer.orderByMonthOctober}}</td>
        <td>{{customer.orderByMonthNovember}}</td>
        <td>{{customer.orderByMonthDecember}}</td>
      </tr>
      {{/each}}
    </tbody>
  </table>





</div>



<div class="ui bottom attached tab segment" data-tab="second">








  <div class="print-box" >
    <h2 class="ui left floated header no-print"> Sales Report</h2>
    <img src="images/hed1.png" class="only-print" >
    <div class="ui clearing  divider only-print"></div>
    <div class="ui center aligned dividing header only-print">Sales Report</div>
    <button class="ui tiny primary right floated button no-print" {{action "printReport"}}>Print</button>
    <div class="clearfix"></div>
    <div class="ui small form ">
      <div class=" four fields" >
        <div class=" field" >
          <label >Customer:</label>
          {{ember-selectize
            content=customers
            optionValuePath="content.id"
            optionLabelPath="content.companyname"
            selection=customer
            placeholder="Select a Customer"
            class="no-print"
          }}
          <p class="only-print">{{customer.companyname}}</p>
        </div>
        <div class=" field" >
          <label >Start Date:</label>
          {{pikaday-input  placeholder="Select Date" value=startdate class="no-print"}}
          <p class="only-print">{{ moment-format startdate inputFormat}}</p>
        </div>
        <div class=" field" >
          <label>End Date</label>
          {{pikaday-input  placeholder="Select Date" value=enddate class="no-print"}}
          <p class="only-print">{{ moment-format enddate inputFormat}}</p>
        </div>
        <div class=" field" >
          <button class="ui tiny right floated  inverted red button no-print " style="margin-top:25px" {{action "clearFilters"}}>Clear All Filters</button>
        </div>
      </div>
    </div>
    <table class="ui celled structured center aligned table">
      <thead>
        <tr>
          <th>Item No.</th>
          <th>Item Name</th>
          <th>Unit Qty.</th>
          <th>Unit Price</th>
          <th>Tot.Amt </th>
          <th>MRF</th>
          <th>Date</th>
          <th>Department</th>
        </tr>
      </thead>
      <tbody>
        {{#each filteredProducts  as |order index|}}
        {{#each order.orderitems as |orderitem|}}
        <tr>
          <td>{{orderitem.product.itemcode}}</td>
          <td>{{orderitem.product.productname}}</td>
          <td>{{orderitem.quantity}}</td>
          <td>{{orderitem.product.retailprice}}</td>
          <td>{{orderitem.computedtotal}}</td>
          <td>{{order.mrf}}</td>
          <td>{{moment-format order.issuancedate inputFormat}}</td>
          <td>{{order.customer.companyname}}</td>



        </tr>
        {{/each}}
        {{/each}}
        <tr>
          <td></td>
          <td></td>
          <td></td>
          <td><b>Total</b></td>
          <td>{{computedSalesTotal}}</td>
          <td></td>
          <td></td>
          <td></td>
        </tr>
      </tbody>
    </table>
  </div>

</div>

{{initialize-semanticuitabs}}
