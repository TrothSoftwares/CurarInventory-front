<div class="print-box" >
<h2 class="ui left floated header no-print"> Sales Report</h2>
<img src="images/hed1.png" class="only-print" >
<div class="ui clearing  divider only-print"></div>
<div class="ui center aligned dividing header only-print">Sales Report</div>

<br>

<div class="ui small form no-print">
<div class=" four fields" >
  <div class=" field" >
    <label >Customer:</label>
    {{ember-selectize
      content=customers
      optionValuePath="content.id"
      optionLabelPath="content.companyname"
      selection=customer
      placeholder="Select a Customer"
    }}
  </div>

  <div class=" field" >
    <label >Start Date:</label>
    {{pikaday-input  placeholder="Select Date" value=startdate}}
  </div>
  <div class=" field" >
    <label>End Date</label>
    {{pikaday-input  placeholder="Select Date" value=enddate}}
  </div>
  <div class=" field" >
  <button class="ui tiny right  inverted red button " {{action "clearFilters"}}>Clear All Filters</button>
  </div>
</div>
</div>

<table class="ui celled structured center aligned table">
  <thead>
    <tr>
    <th>No.</th>
    <th>Date</th>
    <th>Sales Volume</th>
    <th>Sales Value </th>

  </tr>
</thead>

  <tbody>
    {{#each filteredProducts  as |order index|}}
    <tr>
  <td> {{ incrementone index}}</td>
  <td> {{order.duedate}}</td>
  <td> {{order.totalunits}}</td>
  <td> {{order.totalcost}}</td>
    </tr>
    {{/each}}
    <tr>
      <td></td>
      <td></td>
      <td><b>Total</b></td>
      <td>{{computedSalesTotal}}</td>
    </tr>

  </tbody>

</table>
<button class="ui tiny primary right floated button no-print" {{action "printReport"}}>Print</button>
</div>
{{outlet}}
