<div class="print-box">
<h2 class="ui left floated header no-print"> Inventory Report</h2>
<img src="images/logo2.png" class="only-print" >
<div class="ui clearing  divider only-print"></div>
<div class="ui center aligned dividing header only-print">Inventory Report</div>
<button class="ui tiny primary right floated button no-print" {{action "printReport"}}>Print</button>

<div class="clearfix" ></div>
<div class="ui grid"style="margin-top:0 ">
  <div class="seven wide column  ">
    <div class="ui grid">
    <div class="four wide column  ">

    <label style="margin-top:10px;width:125px"> Product Type </label>
  </div>
  <div class="ten wide column ">
    {{ember-selectize
      content=producttypes
      optionValuePath="content.id"
      optionLabelPath="content.typename"
      selection=producttype
      placeholder="Select a Product Type"
      class="no-print"
    }}
    <p class="only-print " style="margin-top:10px;"> : {{producttype.typename}}</p>

</div>
</div>
</div>
<div class="four wide column  ">


</div>
<div class="five wide column  ">

  <button class="ui tiny right floated green button no-print " {{action "clearFilters"}}>Clear All Filters</button>

</div>
</div>








<table class="ui celled structured center aligned table">
  <thead>
    <tr>
    <th>No.</th>
    <th>Item Code</th>
    <th>Item Type</th>
    <th>Product Name</th>
    <th>Stock In Hand </th>
    <th>Retail Price</th>
    <th>Total (Retail)</th>

  </tr></thead>
  <tbody>
  {{#each filteredProducts  as |product index|}}
  <tr >
    <td> {{ incrementone index}}</td>
<td> {{product.itemcode}}</td>
<td> {{product.producttype.typename}}</td>
<td> {{product.productname}}</td>
<td> {{product.initialstocklevel}}</td>
<td> {{product.retailprice}}</td>
<td> {{product.computedtotal_retail_intialstocklevel}}</td>
  </tr>
  {{/each}}
  <tr>
    <td></td>
    <td></td>
    <td></td>
    <td></td>
    <td></td>
    <td><b>Total</b></td>
    <td>{{computedRetailTotal}}</td>
  </tr>
  </tbody>
</table>
{{outlet}}
</div>
