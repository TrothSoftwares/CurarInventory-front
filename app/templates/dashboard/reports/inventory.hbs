<div class="print-box">
<h2 class="ui left floated header no-print"> Inventory Report</h2>
<img src="images/z2.jpg" class="only-print" width="200px">
<div class="ui clearing  divider only-print"></div>
<div class="ui center aligned dividing header only-print">Inventory Report</div>



<div class="ui small form">
<div class=" four fields" >
  <div class=" field" >
    <label >Product Type:</label>
    {{ember-selectize
      content=producttypes
      optionValuePath="content.id"
      optionLabelPath="content.typename"
      selection=producttype
      placeholder="Select a Product Type"
    }}
  </div>

  <div class=" field" >
  <button class="ui tiny right  inverted red button " {{action "clearFilters"}}>Clear All Filters</button>
  </div>
</div>
</div>



<table class="ui celled structured center aligned table">
  <thead>
    <tr>
    <th>No.</th>
    <th>Item Code</th>
    <th>Item Type</th>
    <th>Product Name</th>
    <th>Stock In Hand </th>
    <th>Retail Price</th>
    <th>Total (Retail)</th>

  </tr></thead>
  <tbody>
  {{#each filteredProducts  as |product index|}}
  <tr>
    <td> {{ incrementone index}}</td>
<td> {{product.itemcode}}</td>
<td> {{product.producttype.typename}}</td>
<td> {{product.productname}}</td>
<td> {{product.initialstocklevel}}</td>
<td> {{product.retailprice}}</td>
<td> {{product.computedtotal_retail_intialstocklevel}}</td>
  </tr>
  {{/each}}
  <tr>
    <td></td>
    <td></td>
    <td></td>
    <td></td>
    <td></td>
    <td></td>
    <td>{{computedRetailTotal}}</td>
  </tr>
  </tbody>
</table>
<button class="ui tiny primary right floated button no-print" {{action "printReport"}}>Print</button>
</div>
{{outlet}}
