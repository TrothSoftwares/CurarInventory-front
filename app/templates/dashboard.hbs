

<div class="ui left visible inverted vertical very thin sidebar labeled icon menu lato no-print" style="width:90px; background: rgb(45,48,51) ">
  <div class="item" style="padding:17px 3px">
    {{#link-to 'dashboard'   }}
    <img src="images/logo.png" width="60px">
    {{/link-to}}
  </div>










  {{#link-to 'dashboard.inventory.index'  class="item"}}
    <i class="block  layout icon" style="color:#0077c0"></i>
    Inventory
  {{/link-to}}

  {{#link-to 'dashboard.relations.suppliers.index'  class="item"}}
    <i class="users  layout icon" style="color:#338d11"></i>
    Misc
  {{/link-to}}

  {{#link-to 'dashboard.stockcontrol.purchaseorders.index'  class="item"}}
    <i class="suitcase  layout icon" style="color:#e1ac26"></i>
    Stock Control
  {{/link-to}}


  {{#link-to 'dashboard.orders.index'  class="item"}}
    <i class="newspaper  layout icon" style="color:#ff0000"></i>
    Issuance
  {{/link-to}}

  {{#link-to 'dashboard.tools'  class="item"}}
    <i class="settings icon" style="color:#abc"></i>
    Tools
  {{/link-to}}


  {{#link-to 'dashboard.reports'  class="item"}}
    <i class="bar chart brown layout icon"></i>
    Reports
  {{/link-to}}



  <a class="item" {{action "logout"}} style="margin-top:219px;border-top:1px solid rgba(150,150,150,0.2)">
    <i class="sign out icon" ></i>
    Logout
  </a>

</div>
<div class="pusher" style="padding:10px 60px 10px 40px;">
  <div class="ui segment basic  ">



    <div class="ui item active transparent icon input">

                    {{input type="text" class="ui " value=searchproduct  placeholder="Search product..." key-up="searchProduct" }}
                    <i class="search icon"></i>
    </div>











    {{!-- BEGIN-SNIPPET simple-table --}}
    <table class="ui celled table">

    {{#light-table table onScrolledToBottom=(action 'onScrolledToBottom') as |t|}}
    <thead>
      {{t.head
        onColumnClick=(action 'onColumnClick')
        iconAscending='fa fa-sort-asc'
        iconDescending='fa fa-sort-desc'
        fixed=true
      }}
    </thead>

      {{#t.body canSelect=false height='64vh' as |body|}}
        {{#if isLoading}}
          {{#body.loader}}
          <div class="spinner">
<div class="rect1"></div>
<div class="rect2"></div>
<div class="rect3"></div>
<div class="rect4"></div>
<div class="rect5"></div>
</div>
          {{/body.loader}}
        {{/if}}
      {{/t.body}}
      {{#t.foot}}
      <tfoot>
    <tr>

      <th colspan="3">
<div class="ui right floated pagination menu">
      {{#each count as |number|}}
      {{#if (eq number mdata.meta.pagination.self.number) }}
      <a class="icon item " {{action "onPaginationClick" number}}>
        <i class="chevron icon" style="text-transform:capitalize"> {{ number }}</i>
      </a>

      {{else}}
      <a class="icon item" {{action "onPaginationClick" number}}>
        <i class="chevron icon" style="text-transform:capitalize"> {{ number }}</i>
      </a>
      {{/if}}
      {{/each}}
</div>


    </th>
  </tr></tfoot>
      {{/t.foot}}
    {{/light-table}}
  </table>
    {{!-- END-SNIPPET --}}









{{outlet}}
</div>
</div>
